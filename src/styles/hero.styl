.jelly-container, .jelly-container2 
  position absolute
  display inline-block
  left 50%
  margin-left -200px
  margin-top 40px

.jelly-container2
  position sticky
  top 0


.jelly-container, .jelly-container2, .jelly-canvas, .jelly-canvas2  
  // position absolute
  width 400px
  height 400px

  // &:hover 
  //   cursor: url('../assets/cursor-white.svg'), auto;
     
  


/* It's important to position the `.centroid-container` in the top-left corner
   This way the `.centroid-text` will be positioned in the center (with JavaScript) */
.centroid-container, .centroid-container2 
  position absolute
  left 0
  top 0
  transform translate(-50%, -50%)
  pointer-events none

