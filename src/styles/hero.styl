/* KNOCKOUT TEXT */
///////////////////

.hero-container .backdrop {
	// width: 600px; 
  // height: 300px;
	position: relative;
	background-size: 100%;
	// margin: 40px auto;
}

.hero-container .water.backdrop {
  background: url("../assets/painting.jpg") repeat;
  animation moving-background 4s linear infinite
}
.hero-container .water.overlay {
	background-color: #e5e5e5;
}
.hero-container .water.text {
	font-size: 11rem;
}

.hero-container .text {
	color: black;
	background-color: white;
	mix-blend-mode:screen; 
	width: 100%; 
  // height: 100%;
	font-weight: bolder;
	// text-align: center;
	// line-height: 300px;
}

.hero-container .overlay {
	width: 100%; 
  height: 100%;
	position: absolute;
	top: 0;
	mix-blend-mode: multiply;
}

/* background image animation */
@-webkit-keyframes moving-background {
  0% {background-position: left center;}
  100% {background-position: right center;}
}

@keyframes moving-background {
  0% {background-position: left center;}
  100% {background-position: right center;}
}

