// WHAT WE DO
.what-we-do-container 
  padding-left 0 !important
  margin-top 150px
  height 250px
  visibility hidden

  &-anim
    visibility visible
    animation slideInTop .3s linear

  & .first-title
    width 70%

.what-we-do-title
  visibility hidden

  &-anim
    visibility visible
    animation fadeIn .5s linear
    
.conference
  position relative
  height 250px
  left -200px
  visibility hidden

  &-anim 
    left 0
    transition .5s
    visibility visible

.play 
  position absolute
  top 100px
  z-index 20
  margin-left -30px
  visibility hidden

  &-anim
    visibility visible
    animation animatePlayButton .5s linear

  &:hover 
    cursor: pointer;

.what-we-do-text
  overflow hidden
  height 0px

  &-anim
    transition 2s
    height 70px

@keyframes animatePlayButton
  0% 
    transform translate(80px, 80px)
  
  100% 
    transform translate(0px, 0px)




