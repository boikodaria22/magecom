#sidebar-1 
	width 100%
	height 80vh !important

.b-sidebar > .b-sidebar-header
	position fixed
	z-index 5

.sidebar-icon
	position absolute
	top 10px
	left -50px
	width 20px

.close
	margin-left 50px !important

.sidebar-logo
	position absolute
	top 10px
	left 150px

.sidebar-nav-info-row
	margin 0 !important
	padding 0 !important
	width 100%
	overflow hidden

.sidebar-nav-container
	position relative
	display flex
	align-items center
	justify-content center
	height 80vh

.sidebar-info-column 
	display flex
	align-items center
	justify-content center

	background-color #1B1B1E 
	color #f2f2f2
	height: 80vh 
	overflow: hidden

	&-container
		width 100%

	&-row
		margin auto !important
		padding 20px

	.category 
		opacity 0.6

	.social-networks
		margin-top 0 !important

	.social-networks-links_list
		position absolute
		bottom 10px
		float none !important

	li:hover 
		opacity 0.6
		

.sidebar-nav-list 
	list-style none
	font-family Darker Grotesque
	font-style normal
	font-weight bold
	font-size 72px
	line-height 80%
	color #1B1B1E

	& li 
		margin: 14px 0

	& li:hover 
		color: rgba(0, 0, 0, 0.7)

//NAVBAR

.fixed-top
	z-index 100 !important

.navbar-item 
	font-family Darker Grotesque
	font-style normal
	font-weight 800
	font-size 20px
	line-height 27px
	text-transform uppercase
	color #1B1B1E

	&:hover 
		color rgba(0, 0, 0, 0.7)
	
