#portfolio
	min-height 100vh
	background-color #1B1B1E
	font-family Darker Grotesque
	position relative
	z-index 0

	.navbar-item 
		color #ffffff

		&-case-studies
			color #1b1b1e
			transition .3s

		&:hover
			opacity 0.7 

	.title-container
		padding-top 140px

		.first-title
			color #ffffff

			&-case-studies
				color #1b1b1e
				transition .3s

		.ellipse
			width 215px
			height 215px
			background-color #F2F2F2
			display flex
			align-items center
			justify-content center
			border-radius 50%
			transition .5s
			position relative
			
			// z-index 30
			
			&-move-right
				transform translateX(100px)
				background-color #1B1B1E
				transition .5s 

			&-text
				color #1B1B1E
				text-align center
				font-weight 800
				text-transform uppercase

	//BRANDS

	.brands-container
		margin-top 150px

		//FILTER
		.filter
			margin-bottom 30px
			background #EC5C2B
			max-height 43px
			width 43px
			overflow hidden
			transition .3s

			.filter-title
				position absolute
				z-index 30
				visibility visible

				&-case-studies
					color #1b1b1e
					transition .3s

			.category .third-title 
				padding-bottom 20px

			&-height-expand
				//height adds in JS
				transition .8s ease-in

			&-width-expand
				width 100%
				transition .3s

			&-rounded 
				border-radius 21.5px 21.5px 21.5px 21.5px

			.expand-collapse-button 
				// cursor pointer
				transition .3s

				&-rotate
					transform rotateZ(135deg)
					transition .3s
				

			.third-title
				color #ffffff
				display inline-block
				margin 5px 0 0 20px
				// cursor pointer
			
				&.clear-all
					float right
					margin-right 10px

					&:hover
						opacity .7

			.checkbox 
				margin 0 0 15px 20px
				// cursor pointer

				img 
					padding 3px
					border 2px solid white

				.unchecked 
					width 21px
					height 21px
					border 2px solid white
					display inline-block
					vertical-align middle
					
				.text
					display inline-block
					margin-left 10px
			
			.line
				background #ffffff
				margin-top 50px

			
			.apply-row
				text-align center
				padding 25px 0 30px 0

				.third-title
					position relative
					top 2px

					&:hover
						opacity .7
					

		
		//END FILTER
				


		.tag-wrap 
			background-color #f2f2f2
			border-radius 100px
			display inline-block
			padding 1px 20px
			margin 0 10px 10px 0
		
			.text
				color #1B1B1E

		.tag-wrap:last-of-type
			margin-bottom 0 !important

		&-row
			padding 50px 0
			position relative

			.line
				background #ffffff 
				position absolute
				bottom 0

			.brand-pic
				position absolute
				width 400px
				z-index -1
				right 200px
				top -50%
				visibility hidden
				opacity 0
				transition .4s linear

				&-hover
					visibility visible
					opacity 1
					transition .4s linear 

		.text
			color #ffffff

		.third-title
			color #828282
			

		.first-title
			-webkit-text-stroke: 1px white;
			-webkit-text-fill-color: #1B1B1E;
			transition .3s linear

			&-hover
				-webkit-text-fill-color: #fff;
				transition .3s linear

		//case studies

		.case-studies-list-container 
			.text
				color #828282

			.third-title
				color inherit

		//footer
	.footer-container
		margin-top 150px


