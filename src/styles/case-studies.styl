//CASE STUDIES LIST

.case-studies-list-row 
  display flex
  align-items center
  padding 50px 0
  position relative

  & .text
    color #828282
    padding 0

  & .second-title
    display flex
    align-items flex-end

  & .line
    position absolute
    bottom 0

  &:hover, &:hover .text
    color #fff !important

  &-anim
    animation slideInTop .5s linear

//persprective

.perspective-card-wrap
  perspective 100000px
  perspective-origin top center

.perspective-card__content
  position absolute
  top 2rem
  left 0
  width 100%
  // transform translateZ(40px)
  text-align center

.perspective-card
  width 100%
  height 130%
  position absolute
  z-index -5
  transform-style preserve-3d
  will-change transform

.slide-forward
  animation slide-fwd-center .45s cubic-bezier(.25,.46,.45,.94) both

.scale
	scale 1.3
	// transition .1s linear
	opacity 0
  
	&-anim
		scale 1.1
		opacity 1
		transition .3s linear

