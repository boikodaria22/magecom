#drive-business-online
	font-family Darker Grotesque

	.drive-title-container
		margin-top 150px

		.first-row
			align-items center

		.first-title
			position relative
			z-index 10

		///////////////////
		/* KNOCKOUT TEXT */
		///////////////////
		.backdrop {
			position: relative;
			background-size: 100%;
			width 400px
			// margin-left -70px
		}
	
		.water.backdrop {
			background: url("../assets/painting.jpg") repeat;
			animation moving-background 4s linear infinite
			overflow hidden
		}
		.water.overlay {
			background-color: #e5e5e5;
		}
		.water.text {
			font-size: 84px;
			padding-bottom 10px
		}
	
		.text {
			color: black;
			background-color: white;
			mix-blend-mode: screen; 
			// width: 100%;
			font-weight: bolder;
			text-align: center;
			line-height: 57.6px
		}
	
		.overlay {
			width: 100%; 
			height: 100%;
			position: absolute;
			top: 0;
			mix-blend-mode: multiply;
		}

	//lets chat jelly

	.lets-chat-container
		min-height 350px
		margin-top 50px

	.jelly-container
		margin-top -50px
	

	.arrows-column-wrapper
		margin 80px 0
		height 150px			
		position absolute
		overflow hidden

	.arrows-down-column
		position relative
		top -60px
		animation moveArrow 1.2s infinite linear

	.arrow-down
		display block
		margin 20px 0

		@keyframes moveArrow 
			0% 
				transform translateY(0px)
			
			100%
				transform translateY(82px)



	
	//solutions
	.solutions-container .text 
		margin-top 20px

	.solutions-category
		
		.expand-category
			overflow hidden
			transition .3s 

			&-anim 
				transition .3s
				// max-height 300px

		&-row
			padding 20px 0 20px 0
			display flex
			align-items center
			// transition .3s ease-in

			// &:hover
			// 	transition .3s

		.first-title
			display inline-block

			&-hover
				color #EC5C2B
				text-decoration underline

		.expand-collapse
			width 25px
			transition .3s
			
			&-hover
				color #fff
				transform rotateZ(-135deg)
				transition .3s
				width 23px
		
		&-info
			margin-bottom 40px 

	//how it helps

	.how-it-helps-container
		margin-top 150px

	
	//features

	.features-container
		margin-top 150px

	.features-text-and-button .text
		padding 20px 0 21px 0
		white-space pre-wrap

	.footer-container
		margin-top 150px

	.scale
		scale 1.3
		// transition .1s linear
		opacity 0

		&-anim
			scale 1.1
			opacity 1
			transition .3s linear

		