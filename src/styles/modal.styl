.modal-container
	background-color #EC5C2B
	color #fff
	position fixed 
	top 0
	left 0
	z-index 10000
	margin 0
	padding 0
	min-height 80vh
	display none

	.close-modal
		position absolute
		top 50px
		right 30px
		z-index 10000

		&:hover
			opacity 0.6

	.line
		background #fff

	.contact
		margin 100px 0 10px 0

	.form
		margin-top 100px

		input
			margin-top 30px
			background transparent
			border none
			color #fff
			width 100%
			
		.upload
			margin-top 20px
			height 30px
			
			& > input
				visibility hidden
				
			img
				width 25px
				
			.third-title
				display inline-block
				vertical-align middle
				text-decoration-line underline

			.file-type
				opacity 0.6
				display inline-block
				margin-left 5px
				vertical-align middle

		.file-name
			position: absolute
				
		.send 
			.button
				background-color #EC5C2B
				width 130px
				float right
				margin-bottom 20px

				.button-bar
					background-color #fff

		.button-text
			color #fff

		.button .button-bar .button-text 
			color #EC5C2B


.middle-info
	display flex
	flex-direction column
	align-items center

	.other-ways
		font-size 16px
		width 150px
		margin-top 210px

	.email
		margin-top 86px

	.address
		margin 50px 0 50px 0

.right-info

	.phone
		margin-top 371px

.social-networks
	list-style none
	padding-left 0
	text-transform uppercase
	margin-top 50px

	&-row
		margin-top 70px

.footer-logo
	width 120px

.social-networks-links

	&_list
		padding-left 0
		float right

		li
			display inline-block
			margin-left 11px
			text-transform uppercase
			list-style none
		
			&:not(:nth-of-type(1)):before  
				content "/" 
				padding-right 11px 

	.third-title
		font-size 18px

.footer-info-row
	margin-top 15px

.footer-info-list
	font-size 18px
	padding-left 0
	float right
	opacity .6

	li
		display inline-block
		margin-left 30px
		text-transform uppercase
		list-style none
